<?xml version="1.0" encoding="utf-8"?>
<layout scroll="vertical">
		<row>
			<label text="IMAGE"/>
		</row>
		<row>
			<image id="imagetheme" text="theme custom"  light="normal:blue" dark="normal:blue"/>
			<image id="imagethemecolor" text="theme color" lightcolor="blue" darkcolor="blue"/>
			<image id="imagecolor" text="color" color="green"/>
		</row>
		<row>
			<button text="blue" onTap="imageColorBlue"/>
			<button text="green" onTap="imageColorGreen"/>
		</row>
		<row>
			<button text="light theme blue" onTap="imageLightThemeColorBlue"/>
			<button text="light theme green" onTap="imageLightThemeColorGreen"/>
			<button text="dark theme blue" onTap="imageDarkThemeColorBlue"/>
			<button text="dark theme green" onTap="imageDarkThemeColorGreen"/>
		</row>
		<row>
			<button text="light normal blue" onTap="imageLightNormalBlue"/>
			<button text="light normal green" onTap="imageLightNormalGreen"/>
			<button text="dark normal blue" onTap="imageDarkNormalBlue"/>
			<button text="dark normal green" onTap="imageDarkNormalGreen"/>
		</row>

		<row>
			<label text="SLIDER"/>
		</row>
		<row>
			<slider id="slidertheme" text="theme custom"  light="normal:blue;active:green;color:red" dark="normal:blue;active:green;color:red"/>
			<slider id="sliderthemecolor" text="theme color" lightcolor="blue" darkcolor="blue"/>
			<slider id="slidercolor" text="color" color="green"/>
		</row>
		<row>
			<button text="blue" onTap="sliderColorBlue"/>
			<button text="green" onTap="sliderColorGreen"/>
		</row>
		<row>
			<button text="light theme blue" onTap="sliderLightThemeColorBlue"/>
			<button text="light theme green" onTap="sliderLightThemeColorGreen"/>
			<button text="dark theme blue" onTap="sliderDarkThemeColorBlue"/>
			<button text="dark theme green" onTap="sliderDarkThemeColorGreen"/>
		</row>
		<row>
			<button text="light color blue" onTap="sliderLightColorBlue"/>
			<button text="light color green" onTap="sliderLightColorGreen"/>
			<button text="light normal blue" onTap="sliderLightNormalBlue"/>
			<button text="light normal green" onTap="sliderLightNormalGreen"/>
			<button text="light active blue" onTap="sliderLightActiveBlue"/>
			<button text="light active green" onTap="sliderLightActiveGreen"/>

			<button text="dark color blue" onTap="sliderDarkColorBlue"/>
			<button text="dark color green" onTap="sliderDarkColorGreen"/>
			<button text="dark normal blue" onTap="sliderDarkNormalBlue"/>
			<button text="dark normal green" onTap="sliderDarkNormalGreen"/>
			<button text="dark active blue" onTap="sliderDarkActiveBlue"/>
			<button text="dark active green" onTap="sliderDarkActiveGreen"/>
		</row>
		<row>
			<label text="TOGGLE"/>
		</row>
		<row>
			<toggle id="togglecolor" text="no theme"/>
			<toggle id="togglethemecolor" text="no theme"/>
			<toggle id="toggletheme" text="no theme"/>	
		</row>
		<row>
			<button text="blue" onTap="toggleColorBlue"/>
			<button text="green" onTap="toggleColorGreen"/>
		</row>
		<row>
			<button text="light theme blue" onTap="toggleLightThemeColorBlue"/>
			<button text="light theme green" onTap="toggleLightThemeColorGreen"/>
			<button text="dark theme blue" onTap="toggleDarkThemeColorBlue"/>
			<button text="dark theme green" onTap="toggleDarkThemeColorGreen"/>
		</row>
		<row>
			<button text="light normal blue" onTap="toggleLightNormalBlue"/>
			<button text="light normal green" onTap="toggleLightNormalGreen"/>
			<button text="light color blue" onTap="toggleLightColorBlue"/>
			<button text="light color green" onTap="toggleLightColorGreen"/>
			<button text="light active blue" onTap="toggleLightActiveBlue"/>
			<button text="light active green" onTap="toggleLightActiveGreen"/>
			<button text="light normal blue" onTap="toggleLightFocusBlue"/>
			<button text="light normal green" onTap="toggleLightFocusGreen"/>


			<button text="dark normal blue" onTap="toggleDarkNormalBlue"/>
			<button text="dark normal green" onTap="toggleDarkNormalGreen"/>
			<button text="dark color blue" onTap="toggleDarkColorBlue"/>
			<button text="dark color green" onTap="toggleDarkColorGreen"/>
			<button text="dark active blue" onTap="toggleDarkActiveBlue"/>
			<button text="dark active green" onTap="toggleDarkActiveGreen"/>
			<button text="dark normal blue" onTap="toggleDarkFocusBlue"/>
			<button text="dark normal green" onTap="toggleDarkFocusGreen"/>
		</row>
</layout>