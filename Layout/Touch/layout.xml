<?xml version="1.0" encoding="utf-8"?>
<layout>
	<row>
		<touch text="hello world!" />
		<touch image="../test.png" />
	</row>
	<row>
		<touch text="up" onup="up" />
		<touch text="down" ondown="down" />
		<touch text="tap" ontap="tap" />
		<touch text="hold" onhold="hold" />
		<touch text="double" ondoubletap="double" />
	</row>
	<row>
		<touch text="touch" 
			ontouchstart="start"
			ontouchdelta="delta"
			ontouchabs="abs"
			ontouchend="end"
			ontouchsize="size"
			onmultitap="multi" />
	</row>
</layout>